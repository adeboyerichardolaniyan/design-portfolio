---
import { ClientRouter } from "astro:transitions";
import SpeedInsights from "@vercel/speed-insights/astro";
import Analytics from "@vercel/analytics/astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Portfolio",
  description = "Design Portfolio",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/fonts/soehne-buch.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/newsreader-variable.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/newsreader-variable-italic.woff2" as="font" type="font/woff2" crossorigin />
    <title>{title}</title>

    <!-- Anti-FOUC: apply dark mode before paint -->
    <script is:inline>
      (function () {
        try {
          var theme = localStorage.getItem("theme");
        } catch (e) {}
        if (
          theme === "dark" ||
          (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>

    <ClientRouter />
  </head>
  <body class="min-h-screen bg-[var(--color-bg)] text-[var(--color-text-primary)]">
    <main>
      <slot />
    </main>

    <!-- Re-apply theme + restore scroll after View Transitions swap -->
    <script is:inline>
      // Save scroll position before navigating away
      document.addEventListener("astro:before-preparation", function (e) {
        var path = window.location.pathname;
        try {
          sessionStorage.setItem("scroll:" + path, String(window.scrollY));
        } catch (err) {}
      });

      // Restore scroll position + theme after swap
      document.addEventListener("astro:after-swap", function () {
        // Theme
        try {
          var theme = localStorage.getItem("theme");
        } catch (e) {}
        if (
          theme === "dark" ||
          (!theme &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Scroll restoration â€” instant, before transition reveals the page
        var path = window.location.pathname;
        if (path === "/" || path === "/thoughts" || path === "/thoughts/") {
          try {
            var saved = sessionStorage.getItem("scroll:" + path);
            if (saved) {
              document.documentElement.style.scrollBehavior = "auto";
              window.scrollTo(0, parseInt(saved, 10));
              sessionStorage.removeItem("scroll:" + path);
              window.__scrollRestored = true;

              // Instantly reveal all scroll-reveal elements in viewport
              // This runs before the transition animation shows the new page
              var els = document.querySelectorAll(".scroll-reveal:not(.revealed)");
              for (var i = 0; i < els.length; i++) {
                var rect = els[i].getBoundingClientRect();
                if (rect.top < window.innerHeight && rect.bottom > 0) {
                  els[i].style.opacity = "1";
                  els[i].style.transform = "translateY(0)";
                  els[i].classList.add("revealed");
                }
              }

              // Restore smooth scrolling after a frame
              requestAnimationFrame(function () {
                document.documentElement.style.scrollBehavior = "";
              });
            }
          } catch (err) {}
        }
      });
    </script>
    <SpeedInsights />
    <Analytics />
  </body>
</html>
