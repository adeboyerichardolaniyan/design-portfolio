---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Nav from "@/components/nav/FloatingDock";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Portfolio",
  description = "Design Portfolio",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

    <!-- Anti-FOUC: apply dark mode before paint -->
    <script is:inline>
      (function () {
        try {
          var theme = localStorage.getItem("theme");
        } catch (e) {}
        if (
          theme === "dark" ||
          (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>

    <ClientRouter />
  </head>
  <body class="min-h-screen bg-[var(--color-bg)] text-[var(--color-text-primary)] transition-colors duration-[var(--duration-normal)]">
    <main>
      <slot />
    </main>

    <!-- Floating dock nav â€” persists across page transitions -->
    <Nav client:load transition:persist />

    <!-- Re-apply theme after View Transitions swap -->
    <script is:inline>
      document.addEventListener("astro:after-swap", function () {
        try {
          var theme = localStorage.getItem("theme");
        } catch (e) {}
        if (
          theme === "dark" ||
          (!theme &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        ) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      });
    </script>
  </body>
</html>
